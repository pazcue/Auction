<h1>Items#new</h1>
<p>

<%= form_for [@item] do |f| %>
 	<%= f.label :name %>
	<%= f.text_field :name %><br>
	<%= f.label :description %>
	<%= f.text_field :description %><br>
	<%= f.label :starting_price %>
	<%= f.number_field :starting_price, in: 0..1000 %><br>
	<%= f.label :expiration_date %>
	<%= f.date_field :expiration_date %><br>

	<%= f.submit 'submit' %>
<% end %> 
</p>


